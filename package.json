{
  "name": "swift-markdown-copy",
  "displayName": "Swift Markdown Copy",
  "description": "Quickly copy file contents as a markdown code block in three ways: 1) Right-click on a file in the sidebar to copy all contents as markdown, 2) Select text in a file and copy as markdown, 3) Auto select and copy all contents of an open file.",
  "version": "0.0.1",
  "publisher": "jassi-bacha",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Snippets"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jassibacha/swift-markdown-copy.git"
  },
  "keywords": [
    "markdown",
    "copy",
    "snippet",
    "code block"
  ],
  "contributes": {
    "commands": [
      {
          "command": "extension.copySelectionAsMarkdown",
          "title": "Swift Markdown: Copy Selection as Markdown"
      },
      {
          "command": "extension.copyFileContentsAsMarkdown",
          "title": "Swift Markdown: Copy Entire File as Markdown"
      },
      {
          "command": "extension.copyFileFromSidebarAsMarkdown",
          "title": "Swift Markdown: Copy Entire File as Markdown"
      }
    ],
    "menus": {
      "explorer/context": [
          {
              "command": "extension.copyFileFromSidebarAsMarkdown",
              "when": "resourceLangId",
              "group": "navigation"
          }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
